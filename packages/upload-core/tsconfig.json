{
  "compilerOptions": {
    "module":"esnext",
    "incremental": true,
    "moduleResolution": "node",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "declaration": false,

    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/test/**/*",
    "vite.config.ts"
  ]
}
